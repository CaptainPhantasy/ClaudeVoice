# LiveKit Cloud Configuration
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LK_URL=wss://your-project.livekit.cloud
LK_API_KEY=your_livekit_api_key
LK_API_SECRET=your_livekit_api_secret

# OpenAI Configuration (for LLM, STT via Whisper, and TTS)
OPENAI_API_KEY=your_openai_api_key
OPENAI_ASSISTANT_ID=your_openai_assistant_id

# Weather API (optional)
OPENWEATHER_API_KEY=your_openweather_key

# Agent Configuration
AGENT_NAME=claudevoice-agent
AGENT_PORT=8080

# Model Configuration
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=150

# Speech-to-Text Configuration
STT_MODEL=whisper-1
STT_LANGUAGE=en  # Set to "auto" for automatic language detection

# Text-to-Speech Configuration
TTS_MODEL=tts-1  # Options: tts-1, tts-1-hd
TTS_VOICE=alloy  # Options: alloy, echo, fable, onyx, nova, shimmer
TTS_SPEED=1.0    # Range: 0.25 to 4.0

# Voice Activity Detection
VAD_MIN_SPEECH=0.1
VAD_MIN_SILENCE=0.5
VAD_MIN_SILENCE_PHONE=0.3

# Feature Flags
ENABLE_NOISE_CANCELLATION=true
ENABLE_VOICEMAIL_DETECTION=true
ENABLE_CALL_RECORDING=false

# Database Configuration
DB_TYPE=demo
# For PostgreSQL:
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=claudevoice
# DB_PASSWORD=your_db_password
# DB_NAME=claudevoice

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
BLOCKED_NUMBERS=

# Environment
NODE_ENV=development

# Monitoring (optional)
GRAFANA_PASSWORD=admin

# CourtReserve API Configuration
COURTRESERVE_API_KEY=your_courtreserve_api_key
COURTRESERVE_BASE_URL=https://api.courtreserve.com
COURTRESERVE_ORG_ID=your_org_id